{
  "name": "pixcap",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.19.1",
    "express": "^4.17.2",
    "tsoa": "^3.14.1"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.2",
    "@types/express": "^4.17.13",
    "@types/node": "^17.0.8",
    "typescript": "^4.5.4"
  },
  "scripts": {
    "generate-routes": "yarn run tsoa routes",
    "compile": "yarn run tsc --outDir build --experimentalDecorators",
    "start-server": "node build/src/server.js",
    "live": "yarn run tsc --outDir build --experimentalDecorators && node build/src/server.js",
    "docker-start-app": "yarn run tsoa routes && yarn run tsc --outDir build --experimentalDecorators && node build/src/server.js",
    "generate-image": "docker build . -t harsh/pixcap/backend",
    "start-image": "docker run -p 8070:8070 -d harsh/pixcap/backend"
  }
}
